@model List<RepositoryProjeto.Entities.Aluguel>
@{
    ViewBag.Title = "Rents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rents</h2>
@if (Model.Count == 0)
{
    <text>We don't have any rents yet.</text>
}
else
{
    <ul>
        @foreach (var rent in Model)
        {
            <li>@rent.Customer.Nome rented: @Html.ActionLink(rent.Movie.Nome, "Details/" + rent.Id, "Movies")</li>
        }
    </ul>
}