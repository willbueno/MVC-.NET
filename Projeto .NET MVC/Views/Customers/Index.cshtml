@model List<Projeto.NET_MVC.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Count == 0)
{
    <text>We don't have any customers yet.</text>
}
else
{
<ul>
    @foreach (var customer in Model)
    {
        <li>@Html.ActionLink(customer.Nome, "Details/" + customer.Id, "Customers")</li>
    }
</ul>
}
