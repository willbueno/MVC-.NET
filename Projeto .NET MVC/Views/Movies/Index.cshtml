@model List <Projeto.NET_MVC.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count == 0)
{
    <text>We don't have any movies yet.</text>
}
else
{
    <ul>
        @foreach (var movie in Model)
        {
            <li>@Html.ActionLink(movie.Nome, "Details/" + movie.Id, "Movies")</li>
        }
    </ul>
}

@Html.ActionLink("Insert new movie", "Create", "Movies")